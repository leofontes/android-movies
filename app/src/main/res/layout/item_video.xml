<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/defaultLightGray">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/youtube"
        android:id="@+id/imageview_video"
        android:layout_weight="3"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:text="Trailer #1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_video_number"
            android:textAlignment="center"
            android:textColor="@color/defaultRed" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textview_video_desc"
            android:textAlignment="center"
            android:textColor="@color/defaultGray" />
    </LinearLayout>
</LinearLayout>